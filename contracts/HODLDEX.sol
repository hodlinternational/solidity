interface IStargateRouterInterface {
    function swap(
        uint16 _dstChainId,
        uint256 _srcPoolId,
        uint256 _dstPoolId,
        address payable _refundAddress,
        uint256 _amountLD,
        uint256 _minAmountLD,
        UtilsBridge.lzTxObj memory _lzTxParams,
        bytes calldata _to,
        bytes calldata _payload
    ) external payable;
}

interface IStargateRouterETHInterface {
    function swapETH(
        uint16 _dstChainId,
        address payable _refundAddress,
        bytes calldata _toAddress,
        uint256 _amountLD,
        uint256 _minAmountLD
    ) external payable;
}

contract HODLDEX is Ownable {
    using SafeMath for uint256;
    using SafeBEP20 for IBEP20;

    event swapEvent(address indexed _receiver, uint256 _amount, uint256 _fee);
    event swapBridgeEvent(
        address indexed _receiver,
        uint256 _amount,
        uint256 _fee
    );
    event feeEvent(address indexed _admin, uint256 _fee);
    event receiverEvent(address indexed _admin);

    address public receiver;
    IStargateRouterInterface public IStargateRouter;
    IStargateRouterETHInterface public IStargateRouterETH;

    uint256 public bridgefee = 500;
    bool private locked;

    modifier nonReentrant() {
        require(!locked, "No re-entrancy");
        locked = true;
        _;
        locked = false;
    }

    constructor(
        address _admin,
        IStargateRouterInterface _router,
        IStargateRouterETHInterface _routereth
    ) {
        require(_admin != address(0), "Invalid receiver");
        receiver = _admin;
        IStargateRouter = IStargateRouterInterface(_router);
        IStargateRouterETH = IStargateRouterETHInterface(_routereth);
    }

    function swapBridge(
        uint16 _dstChainId,
        uint256 _srcPoolId,
        uint256 _dstPoolId,
        address payable _refundAddress,
        uint256 _amountLD,
        uint256 _minAmountLD,
        UtilsBridge.lzTxObj memory _lzTxParams,
        bytes calldata _to,
        bytes calldata _payload,
        address fromToken
    ) external payable nonReentrant {
        require(_amountLD > 0, "Invalid amount");
        uint256 feeCal = (_amountLD.mul(bridgefee)).div(10000);
        IBEP20(fromToken).safeTransferFrom(
            msg.sender,
            address(this),
            _amountLD
        );
        IBEP20(fromToken).approve(address(IStargateRouter), _amountLD);
        IBEP20(fromToken).safeTransfer(receiver, feeCal);
        _amountLD = _amountLD - feeCal;
        IStargateRouter.swap{value: msg.value}(
            _dstChainId,
            _srcPoolId,
            _dstPoolId,
            _refundAddress,
            _amountLD,
            _minAmountLD,
            _lzTxParams,
            _to,
            _payload
        );
        emit swapBridgeEvent(msg.sender, _amountLD, feeCal);
    }

    function swapBridgeETH(
        uint16 _dstChainId,
        address payable _refundAddress,
        bytes calldata _toAddress,
        uint256 _amountLD,
        uint256 _minAmountLD
    ) external payable {
        require(_amountLD > 0, "Invalid amount");
        uint256 feeCal = (_amountLD.mul(bridgefee)).div(10000);
        payable(address(this)).transfer(_amountLD);
        payable(receiver).transfer(feeCal);

        IStargateRouterETH.swapETH{value: msg.value}(
            _dstChainId,
            _refundAddress,
            _toAddress,
            _amountLD,
            _minAmountLD
        );
        emit swapBridgeEvent(msg.sender, _amountLD, feeCal);
    }

    function updateBridgeRouter(
        IStargateRouterInterface _router
    ) external onlyOwner {
        IStargateRouter = IStargateRouterInterface(_router);
    }

    function updateBridgeRouterETH(
        IStargateRouterETHInterface _routereth
    ) external onlyOwner {
        IStargateRouterETH = IStargateRouterETHInterface(_routereth);
    }

    function updateBridgeFee(uint256 _fee) external onlyOwner {
        bridgefee = _fee;
        emit feeEvent(msg.sender, _fee);
    }

    function updateReceiver(address _receiver) external onlyOwner {
        require(_receiver != address(0), "Invalid receiver");
        receiver = _receiver;
        emit receiverEvent(receiver);
    }

    receive() external payable {}

    fallback() external payable {}
}
